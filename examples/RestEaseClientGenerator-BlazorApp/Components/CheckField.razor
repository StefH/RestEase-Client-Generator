@inherits BaseField<bool>

<Field Horizontal="true">
    <FieldLabel ColumnSize="ColumnSize.Is2">@Label</FieldLabel>

    <FieldBody ColumnSize="ColumnSize.Is10">
        <Tooltip Text=@Tooltip>
            <Check TValue="bool" @bind-Checked="@Value"></Check>
        </Tooltip>
    </FieldBody>
</Field>