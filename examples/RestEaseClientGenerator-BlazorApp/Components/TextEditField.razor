@inherits BaseField<string>

<Field Horizontal="true">
    <FieldLabel ColumnSize="ColumnSize.Is4">@Label</FieldLabel>

    <FieldBody ColumnSize="ColumnSize.Is4">
        <Tooltip Text=@Tooltip>
            <TextEdit Size="Size.Small" @bind-Text="@Value">
                @*<FieldHelp>@Tooltip</FieldHelp>*@
            </TextEdit>
        </Tooltip>
    </FieldBody>
</Field>