@inherits BaseField<IDictionary<string, string>>

<Field Horizontal="true">
    <FieldLabel ColumnSize="ColumnSize.Is3">@Label</FieldLabel>

    <FieldBody ColumnSize="ColumnSize.Is4">
        <Row>
            <Column>
                <Label>Key</Label>
            </Column>
            <Column>
                <Label>Value</Label>
            </Column>
        </Row>

        @foreach (var key in Value.Keys)
        {
            var editKey = key;
            var editValue = Value[key];

            <Row>
                <Column>
                    <TextEdit Size="Size.Small" @bind-Text="@editKey" />
                </Column>

                <Column>
                    <TextEdit Size="Size.Small" @bind-Text="@editValue" />
                </Column>
            </Row>
        }

        <FieldHelp>@Tooltip</FieldHelp>

    </FieldBody>

</Field>