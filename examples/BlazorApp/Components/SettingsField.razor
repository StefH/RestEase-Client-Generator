@*@typeparam TValue*@

<Field Horizontal="true">
    <FieldLabel ColumnSize="ColumnSize.Is1">@GetLabelText()</FieldLabel>
    
    <FieldBody ColumnSize="ColumnSize.Is10">
        <Tooltip Text=@GetTooltip()>
            @{
                var type = GetPropertyType();
            }
            @if (type == typeof(bool))
            {
                <Check TValue="bool" @bind-Checked="@ValueAsBool"></Check>
            }
            else
            {
                <TextEdit @bind-Text="@ValueAsString" />
            }
        </Tooltip>
    </FieldBody>
</Field>